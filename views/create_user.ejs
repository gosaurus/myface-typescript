<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Create User</h1>
<form method="post" action="/users/create">
    <label for="name">
        Name:
    </label>
    <input type="text" id="name" name="name" required/>
    <label for="username">
        Username:
    </label>
    <input type="text" id="username" name="username" required/>
    <label for="email">
        Email:
    </label>
    <input type="email" id="email" name="email" required/>
    <label for="profileImageUrl">
        ProfileImageUrl:
    </label>
    <input type="text" id="profileImageUrl" name="profileImageUrl" required/>
    <label for="coverImageUrl">
        CoverImageUrl:
    </label>
    <input type="text" id="coverImageUrl" name="coverImageUrl" required/>
    <button type="submit">Submit</button>
</form>
</body>
<%- include('_footer') -%>
</html>